<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rv_background_loading"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:background="@drawable/bg_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_12"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_l">

            <ImageView
                android:id="@+id/iv_loading_da_illustration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_s"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_loading_da_heading_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:visibility="gone"
                android:paddingLeft="@dimen/spacing_m"
                android:paddingRight="@dimen/spacing_m"
                android:layout_marginBottom="@dimen/spacing_xs"
                android:textColor="@color/shades5"
                android:textSize="@dimen/sp_18" />

            <ProgressBar
                android:id="@+id/pb_loading_da"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_loading_da_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:textAppearance="@style/Subtitle2Regular"
                android:textColor="@color/shades4"
                android:visibility="gone"
                tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting Industry." />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>