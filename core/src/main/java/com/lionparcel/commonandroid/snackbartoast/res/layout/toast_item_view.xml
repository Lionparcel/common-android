<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_m"
    android:layout_marginEnd="@dimen/spacing_m"
    android:background="@drawable/bg_toast_item_rounded"
    android:padding="@dimen/spacing_m"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ics_f_check_circle"
        android:layout_marginEnd="@dimen/spacing_s"
        android:contentDescription="@string/general_image_content_description"/>

    <TextView
        android:id="@+id/txtMessage"
        style="@style/Body3Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/sp_12"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:text="@string/general_message"/>

    <TextView
        style=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/general_image_content_description"
        app:srcCompat="@drawable/ics_o_close"
        android:visibility="gone"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_gravity="center_vertical"
        app:tint="@color/white" />

</LinearLayout>
