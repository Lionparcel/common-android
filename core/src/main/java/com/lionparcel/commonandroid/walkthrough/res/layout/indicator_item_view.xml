<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Space
        android:id="@+id/space"
        android:layout_width="@dimen/spacing_xxs"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ivIndicator"
        android:layout_width="@dimen/spacing_xs"
        android:layout_height="@dimen/spacing_xs"
        app:srcCompat="@drawable/bg_circle_interpack7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/general_image_content_description" />

</androidx.constraintlayout.widget.ConstraintLayout>
