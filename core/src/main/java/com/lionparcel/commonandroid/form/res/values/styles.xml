<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LPTextInputLayoutTheme">
<!--        underline color in collapsed state -->
        <item name="colorControlNormal">@color/green6</item>
<!--        underline color in focused state (if hintTextAppearance and hintTextColor are NOT defined in
            [LPTextInputLayout], then this will also set hint/label color in focused state) -->
        <item name="colorControlActivated">@color/yellow7</item>
    </style>

    <style name="LPTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="theme">@style/LPTextInputLayoutTheme</item>
<!--        Hint color and label color in collapsed state. If hintTextAppearance is also defined,
            then this will set color in both state -->
        <item name="android:textColorHint">@color/purple5</item>
<!--        Hint text appearance in focused state
            (only affects text size. Family and style are superseded by [LPTextInputEditText]) -->
        <item name="hintTextAppearance">@style/H5Regular</item>
<!--        Hint color and label color in focused state -->
        <item name="hintTextColor">@color/interpack7</item>

    </style>

    <style name="LPTextInputEditText" parent="Widget.Design.TextInputEditText">
<!--        text appearance for input and hint label in both state -->
        <item name="android:textAppearance">@style/Body1Bold</item>
        <item name="android:textColor">@color/red3</item>

    </style>
</resources>
