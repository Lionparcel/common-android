<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llTagParent"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingVertical="@dimen/spacing_xs"
    android:paddingHorizontal="@dimen/spacing_s"
    android:background="@drawable/bg_selector_tag">

    <ImageView
        android:id="@+id/ivSingleTag"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:contentDescription="@string/general_image_content_description"
        android:layout_marginEnd="@dimen/spacing_xs"
        tools:src="@drawable/ics_f_check_circle"/>

    <TextView
        android:id="@+id/tvSingleTag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:gravity="center"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/shades5"
        android:includeFontPadding="false"
        tools:text="Paket Untukmu"/>

</LinearLayout>
