<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tooltip_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/tooltip_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <FrameLayout
            android:id="@+id/tooltip_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="@dimen/dp_10">

            <com.lionparcel.commonandroid.tooltip.utils.RadiusLayout
                android:id="@+id/tooltip_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                tools:background="@color/shades5">

                <TextView
                    android:id="@+id/tooltip_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/Subtitle3Regular"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tooltip_close"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginStart="@dimen/spacing_l"
                    app:srcCompat="@drawable/ics_o_close"
                    android:tint="@color/white"
                    android:visibility="gone"/>


            </com.lionparcel.commonandroid.tooltip.utils.RadiusLayout>

        </FrameLayout>
        
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tooltip_arrow"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/sp_10"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/tooltip_arrow"
            android:visibility="gone"/>

    </FrameLayout>

</FrameLayout>
