<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LPTooltip"/>

    <style name="LPTooltip.Text">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:width">@dimen/dp_172</item>
    </style>

    <style name="LPTooltip.DialogBox">
        <item name="android:width">@dimen/dp_210</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/spacing_xs</item>
        <item name="android:paddingBottom">@dimen/spacing_xs</item>
        <item name="android:paddingStart">@dimen/spacing_m</item>
        <item name="android:paddingEnd">@dimen/spacing_m</item>
        <item name="android:background">@drawable/lp_tooltip_background</item>
    </style>

    <style name="LPTooltipDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="lpTooltip.backgroundColor">@color/shades5</item>
        <item name="lpTooltip.bodyTextStyle">@style/LPTooltip.Text</item>
        <item name="lpTooltip.tooltipBoxStyle">@style/LPTooltip.DialogBox</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>