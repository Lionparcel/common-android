<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="@dimen/spacing_m"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <View
        android:id="@+id/vw_divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/shades1"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/vw_divider_bloc_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/pensive1"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <RelativeLayout
        android:id="@+id/cl_divider_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/vw_divider_txt_start"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:layout_marginEnd="@dimen/spacing_s"
            android:background="@color/shades1"
            android:visibility="visible"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/txt_divider"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <TextView
            android:id="@+id/txt_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_100"
            android:gravity="center"
            android:textAppearance="@style/Subtitle3Regular"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/vw_divider_txt_start"
            android:layout_toLeftOf="@id/vw_divider_txt_end"
            tools:text="Your divider text here"
            app:layout_constraintStart_toEndOf="@id/vw_divider_txt_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vw_divider_txt_end"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/vw_divider_txt_end"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:background="@color/shades1"
            android:layout_marginStart="@dimen/spacing_s"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/txt_divider"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toEndOf="@id/txt_divider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>