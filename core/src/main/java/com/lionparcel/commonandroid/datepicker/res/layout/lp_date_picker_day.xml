<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llBgStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/spacing_xs"
        android:visibility="gone"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/interpack1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBgEnd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/spacing_xs"
        android:gravity="end"
        android:visibility="gone"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/interpack1"/>

    </LinearLayout>

    <View
        android:id="@+id/vRoundBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/spacing_xs"/>

    <TextView
        style="@style/Subtitle2Regular"
        android:id="@+id/tvDay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/spacing_xs"
        android:includeFontPadding="false"
        android:gravity="center"
        android:textColor="@color/shades5"
        tools:text="22"/>

</FrameLayout>