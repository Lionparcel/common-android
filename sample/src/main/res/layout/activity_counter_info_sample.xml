                    app:counterSize="xl" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_m"
            android:text="Inverted Background"
            android:textAppearance="@style/Subtitle1Bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/interpack6"
            android:layout_marginBottom="@dimen/spacing_s"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xxs"
                android:text="Small"
                android:textColor="@color/white"
                android:textAppearance="@style/Subtitle1Semibold" />

            <com.lionparcel.commonandroid.counterinfo.LPCountdownText
                android:id="@+id/ctSmallInverted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:counterBackground="inverted"
                app:counterSize="small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/interpack6"
            android:layout_marginBottom="@dimen/spacing_s"
