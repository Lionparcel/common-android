                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xxs"
                    android:text="XL/Danger"
                    android:textAppearance="@style/Subtitle1Semibold" />

                <com.lionparcel.commonandroid.counterinfo.LPCountdownText
                    android:id="@+id/ctXLNormalDanger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:counterBackground="normal"
                    app:counterSize="xl" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_m"
            android:text="Transparant Background"
            android:textAppearance="@style/Subtitle1Bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_s"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
