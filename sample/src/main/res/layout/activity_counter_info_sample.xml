                    android:textAppearance="@style/Subtitle1Semibold" />

                <com.lionparcel.commonandroid.counterinfo.LPCountdownText
                    android:id="@+id/ctSmallTransparantNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:counterBackground="transparant"
                    app:counterSize="small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xxs"
                    android:text="Small/Danger"
                    android:textAppearance="@style/Subtitle1Semibold" />

                <com.lionparcel.commonandroid.counterinfo.LPCountdownText
