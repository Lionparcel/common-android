<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".counterinfo.CounterInfoSampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_m"
            android:text="Countdown Text"
            android:textAppearance="@style/H4Bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_m"
            android:text="Normal Background"
            android:textAppearance="@style/Subtitle1Bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_s"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xxs"
                    android:text="Small/Normal"
                    android:textAppearance="@style/Subtitle1Semibold" />

                <com.lionparcel.commonandroid.counterinfo.LPCountdownText
                    android:id="@+id/ctSmallNormalNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:counterBackground="normal"
                    app:counterSize="small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xxs"
                    android:text="Small/Danger"
                    android:textAppearance="@style/Subtitle1Semibold" />

                <com.lionparcel.commonandroid.counterinfo.LPCountdownText
                    android:id="@+id/ctSmallNormalDanger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:counterBackground="normal"
                    app:counterSize="small" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_s"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xxs"
                    android:text="Medium/Normal"
                    android:textAppearance="@style/Subtitle1Semibold" />

                <com.lionparcel.commonandroid.counterinfo.LPCountdownText
                    android:id="@+id/ctMediumNormalNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:counterBackground="normal"
                    app:counterSize="medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xxs"
                    android:text="Medium/Danger"
                    android:textAppearance="@style/Subtitle1Semibold" />

                <com.lionparcel.commonandroid.counterinfo.LPCountdownText
                    android:id="@+id/ctMediumNormalDanger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:counterBackground="normal"
                    app:counterSize="medium" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_s"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xxs"
                    android:text="XL/Normal"
                    android:textAppearance="@style/Subtitle1Semibold" />

                <com.lionparcel.commonandroid.counterinfo.LPCountdownText
                    android:id="@+id/ctXLNormalNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:counterBackground="normal"
                    app:counterSize="xl" />

