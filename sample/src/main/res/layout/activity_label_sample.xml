<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".label.LabelSampleActivity">

    <Button
        android:id="@+id/button_to_basicLabelType"
        style="@style/RedPaleSalmonButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Label Style" />

    <Button
        android:id="@+id/button_to_productLabelType"
        style="@style/RedPaleSalmonButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Label Style" />

    <Button
        android:id="@+id/button_to_membershipLabelType"
        style="@style/RedPaleSalmonButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membership Label Style" />
</LinearLayout>
