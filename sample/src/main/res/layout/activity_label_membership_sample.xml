<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".label.LabelMembershipSampleActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">

        <com.lionparcel.commonandroid.label.LPLabel
            android:id="@+id/label_member_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:labelType="membership"
            app:backgroundMembershipType="basic"
            app:textTitle="Label Text"
            app:enableIconAfter="true"
            app:imageIconAfter="@drawable/ics_o_chevron_right"/>

        <com.lionparcel.commonandroid.label.LPLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:labelType="membership"
            app:labelSize="mediumSize"
            app:textTitle="Label Text"/>

        <com.lionparcel.commonandroid.label.LPLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:labelType="membership"
            app:backgroundMembershipType="basic"
            app:labelSize="smallSize"
            app:textTitle="Label Text"/>

        <com.lionparcel.commonandroid.label.LPLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:labelType="membership"
            app:backgroundMembershipType="reguler"
            app:textTitle="Label Text"/>

        <com.lionparcel.commonandroid.label.LPLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:labelType="membership"
            app:backgroundMembershipType="reguler"
            app:labelSize="mediumSize"
            app:textTitle="Label Text"/>

        <com.lionparcel.commonandroid.label.LPLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:labelType="membership"
            app:backgroundMembershipType="reguler"
            app:labelSize="smallSize"
            app:textTitle="Label Text"
            app:enableIconAfter="true"
            app:imageIconAfter="@drawable/ics_o_chevron_right"/>

        <com.lionparcel.commonandroid.label.LPLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:labelType="membership"
            app:backgroundMembershipType="premium"
            app:textTitle="Label Text"/>

        <com.lionparcel.commonandroid.label.LPLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:labelType="membership"
            app:backgroundMembershipType="premium"
            app:labelSize="mediumSize"
            app:textTitle="Label Text"
            app:enableIconAfter="true"
            app:imageIconAfter="@drawable/ics_o_chevron_right"/>

        <com.lionparcel.commonandroid.label.LPLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:labelType="membership"
            app:backgroundMembershipType="premium"
            app:labelSize="smallSize"
            app:textTitle="Label Text"/>

    </LinearLayout>

</ScrollView>
