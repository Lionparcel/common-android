<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_xs"
    android:orientation="vertical"
    tools:context=".form.AutoCompleteFormSampleActivity">

    <com.lionparcel.commonandroid.form.LPAutoCompleteForm
        android:id="@+id/lpAutoCompleteForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="LPTextAutoCompleteTextView"/>

    <com.lionparcel.commonandroid.form.LPAutoCompleteTextView
        android:id="@+id/autoCompleteTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>