<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form.AttachFileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8">

        <com.lionparcel.commonandroid.form.LPAttachFile
            android:id="@+id/lpAttachFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.lionparcel.commonandroid.form.LPAttachFile
            android:id="@+id/lpAttachFile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8" />

        <ImageView
            android:id="@+id/imgAttachFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"/>

        <com.lionparcel.commonandroid.form.LPBulkAttachFile
            android:id="@+id/lpBulkAttachFile"
            app:textLabel="Bulk Attach File"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"/>

    </LinearLayout>

</ScrollView>
