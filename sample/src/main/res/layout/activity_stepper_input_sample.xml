<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form.StepperInputSampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <com.lionparcel.commonandroid.form.LPCountInput
            android:id="@+id/lpCountInputDivider"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:minQtyValue="1"
            android:layout_marginBottom="24dp"/>

        <com.lionparcel.commonandroid.form.LPCountInput
            android:id="@+id/lpCountInputNoDivider"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:withDivider="false"
            app:countEditable="false"
            android:layout_marginBottom="24dp"/>

        <com.lionparcel.commonandroid.form.LPListCountInput
            android:id="@+id/lpListCountDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:minQtyValue="4"
            android:layout_marginBottom="24dp"/>

        <com.lionparcel.commonandroid.form.LPListCountInput
            android:id="@+id/lpListCountNoDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:withDivider="false"
            app:countDivider="false"
            android:layout_marginBottom="24dp"/>

        <com.lionparcel.commonandroid.button.LPButton
            android:id="@+id/btnDisableCountInfo"
            android:text="Disable / Enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>

</ScrollView>