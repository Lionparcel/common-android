<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".tab.TabLayoutSampleActivity">

    <Button
        android:id="@+id/button_to_tabTwoColumn"
        style="@style/RedPaleSalmonButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tab Two Column Sample" />

    <Button
        android:id="@+id/button_to_tabThreeColumn"
        style="@style/RedPaleSalmonButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="Tab Three Column Sample" />

    <Button
        android:id="@+id/button_to_tabScroll"
        style="@style/RedPaleSalmonButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="Tab Scroll Sample" />

</LinearLayout>